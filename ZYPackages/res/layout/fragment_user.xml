<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/title_bg"
        android:orientation="horizontal"
        android:minHeight="50dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/TitleFont"
                android:textStyle="bold"
                android:text="个人中心" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal" >
                                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="用户名：" />

                <TextView
                    android:id="@+id/textView_user_login_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="  " />
                </LinearLayout>
               <View 
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   android:background="@color/gray_line_bg"
                   /> 
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal" >
                                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="手机号：" />

                <TextView
                    android:id="@+id/textView_user_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/UserFont"
                    android:text="" />
                </LinearLayout>
               <View 
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   android:background="@color/gray_line_bg"
                   /> 
               <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal" >
                                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="真实姓名：" />

                <TextView
                    android:id="@+id/textView_user_real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/UserFont"
                    android:text="" />
                </LinearLayout>
               <View 
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   android:background="@color/gray_line_bg"
                   /> 
                                  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal" >
                                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="身份证号：" />

                <TextView
                    android:id="@+id/textView_user_id_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/UserFont"
                    android:text="" />
                </LinearLayout>
               <View 
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   android:background="@color/gray_line_bg"
                   /> 
                                  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal" >
                                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="电子邮箱：" />

                <TextView
                    android:id="@+id/textView_user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/UserFont"
                    android:text="" />
                </LinearLayout>
               <View 
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   android:background="@color/gray_line_bg"
                   /> 
                                  <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:orientation="horizontal" >
                                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/UserFont"
                    android:text="用户权限：" />

                <TextView
                    android:id="@+id/textView_user_permision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    style="@style/UserFont"
                    />
                </LinearLayout>
               <View 
                   android:layout_height="1dp"
                   android:layout_width="match_parent"
                   android:background="@color/gray_line_bg"
                   />

               <Button
                   android:id="@+id/button_user_exit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="10dp"
                   android:text="退出当前账号" />

            </LinearLayout>

</LinearLayout>
